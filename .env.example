# Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_quizzer
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_key_here_make_it_very_long_and_random
JWT_EXPIRES_IN=24h

# AI Service Configuration
GROQ_API_KEY=your_groq_api_key_here
AI_MODEL=llama3-8b-8192

# Server Configuration
PORT=3000
NODE_ENV=development

# Email Configuration (Optional - for bonus features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Configuration
CACHE_QUIZ_TTL=3600
CACHE_HISTORY_TTL=1800
CACHE_HINTS_TTL=86400
