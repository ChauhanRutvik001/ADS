# AI Quizzer Backend - Environment Variables

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_quizzer
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_key_here_make_it_very_long_and_random_at_least_256_bits
JWT_EXPIRES_IN=24h

# AI Service Configuration
# Choose your AI provider: 'groq' or 'gemini'
AI_PROVIDER=gemini

# Groq Configuration (if using GROQ)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192

# Gemini Configuration (if using GEMINI)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Server Configuration
PORT=3000
NODE_ENV=development

# Email Configuration (Optional - for bonus features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Configuration
CACHE_QUIZ_TTL=3600
CACHE_HISTORY_TTL=1800
CACHE_HINTS_TTL=86400
